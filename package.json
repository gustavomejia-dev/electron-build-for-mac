{
  "name": "electron",
  "version": "1.0.0",
  "description": "Um aplicativo Electron simples",
  "main": "main.js",
  "asar": false,
  "scripts": {
    "rebuild": "electron-rebuild",
    "start": "electron .",
    "build": "rm -rf dist/ && electron-builder",
    "mac": "electron-builder -m"
  },
  "devDependencies": {
    "electron": "^26.0.0",
    "electron-builder": "^24.3.0"

  },
  "build": {
    "appId": "com.meuprojeto.electron",
    "files": [
      "main.js",
      "index.html",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility"
    }
  },
  "dependencies": {
    "bcrypt": "^5.1.1"
  }
}
